<%= stylesheet_link_tag "search.css" %>

<div id="songs">
  <table class="table table-hover table-striped">
  <h1 class="title">Owned Songs</h1>
  <br/>
    <thead class="table-dark ">
      <tr>
        <th>Song</th>
        <th>Album</th>
        <th>Artist</th>
        <th></th>
        <th></th>
      </tr>
    </thead>


    <tbody>
      <% @songs.each do |song| %>
        <% if song.user == current_user %>
        <tr>
          <td><%= song.song_title %></td>
          <td><%= song.album_title %></td>
          <td><%= song.artist_name %></td>
          <td><%= link_to "Show this song", song, class:"btn btn-dark" %></td>
          <td><%= link_to "X", song, method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Add song", new_song_path, class:"btn btn-dark" %>

