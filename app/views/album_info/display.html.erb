<style>
  h1{
    text-align: center;
    margin: 2%;
  }
</style>

<div id="songs">
  <table class="table table-hover table-striped">
  <h1><%= @album%> Tracks</h1>
  <br/>
    <thead class="table-dark ">
      <tr>
        <th>Song</th>
        <th>Album</th>
        <th>Artist</th>
        <th></th>
      </tr>
    </thead>


    <tbody>
      <% @response.each do |track| %>
        <tr>
            <%= form_for :song, url: "/songs", method: "post" do |f| %>
                <div>
                    <td><%= track %></td>
                    <%= f.text_field :song_title, song_title: :song_song_title, class:"form-control", value: track, type: :hidden %>
                </div>
                <div>
                    <td><%= @album %></td>
                    <%= f.text_field :album_title, album_title: :song_album_title, class:"form-control", value: @album, type: :hidden %>
                </div>
                <div>
                    <td><%= @art_name %></td>
                    <%= f.text_field :artist_name, artist_name: :song_artist_name, class:"form-control", value: @art_name, type: :hidden %>
                </div>
                <div class="form-group">
                    <%= f.number_field :user_id, id: :song_user_id, class:"form-control", value: current_user.id, type: :hidden %>
                </div>
                <td>
                    <div>
                        <%= f.submit class:"btn btn-dark" %>
                    </div>
                </td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br/>
<h1><%= link_to "Back to Albums", artist_info_display_path(:art_id => @art_id, :name => @art_name), class:"btn btn-dark btn-lg" %></h1>
<br/>