<style>
  h1{
    text-align: center;
  }
  ul {
    margin: 0 auto;
    text-align: center;
  }
  li {
    display: inline-block;
    vertical-align: top;
    margin: 4px;
  }
</style>

<h1><%= @result%>'s Albums</h1>
<ul>
  <% @response.each do |album| %>
  <li>
    <img src=<%= album["image"][2]["#text"] %>>
    <% @album = album["name"] %>
    <% @artist = album["artist"]["name"] %>
    <p><%= @album %></p>
    <%= link_to "View Album", album_info_display_path(:album => @album, :artist => @artist)%>
    <% end %>
  </li>
</ul>
