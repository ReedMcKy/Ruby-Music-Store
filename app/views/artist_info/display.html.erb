<style>
  h1{
    text-align: center;
  }
  ul {
    margin: 0 auto;
    text-align: center;
  }
  li {
    display: inline-block;
    vertical-align: top;
    margin: 4px;
  }
</style>

<h1><%= @art_name%>'s Albums</h1>
<ul>
  <% @images.zip(@titles).each do |image, title| %>
  <li>
    <%= image_tag(image) %>
    <% @album = title %>
    <h1><%= link_to title, album_info_display_path(:album => @album, :artist => @artist), class:"btn btn-outline-dark"%></h1>
    <% end %>
  </li>
</ul>
